	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
	<h1><%= @project.name %></h1>
	<ul>
		<% @entries.each do |entry| %>
			<li><%= entry.hours%>h <%= entry.minutes%>m - <%= entry.date%>
			<%= link_to('Edit', edit_project_entry_path(@project.id,entry.id)) %>
			<%= link_to('Delete',project_entry_path(@project.id,entry.id),method: 'delete', data:{confirm: 'Are you sure?'}) %></li>

		<% end %>
	</ul>
	<!--Calling a helper -->
	<p>Total hours worked this month: <%= current_month_hours_for_project(@project,@date) %></p>

<%= link_to('Go back to projects', projects_path)%>
